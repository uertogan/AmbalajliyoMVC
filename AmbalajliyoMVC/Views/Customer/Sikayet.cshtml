@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var orderForm = document.querySelector('form'); // Formu seç

            if (orderForm) {
                orderForm.addEventListener('submit', function (event) {
                    event.preventDefault(); // Formun hemen gönderilmesini engelle

                    var isValid = true;
                    var formData = new FormData(orderForm);

                    // Form verilerini kontrol et
                    formData.forEach(function (value, key) {
                        if (value.trim() === '') {
                            isValid = false;
                        }
                    });

                    if (isValid) {
                        // SweetAlert2 popup'ını göster
                        Swal.fire({
                            title: 'Başarı!',
                            text: 'Şikayet talebiniz başarıyla alınmıştır. En kısa sürede iletişime geçilecektir. Bizi tercih ettiğiniz için teşekkür ederiz.',
                            icon: 'success',
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'Ana Sayfaya Dön'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                orderForm.submit(); // Formu gönder
                            }
                        });
                    } else {
                        // Hatalı form alanlarını göster
                        Swal.fire({
                            title: 'Hata!',
                            text: 'Lütfen tüm alanları doldurduğunuzdan emin olun.',
                            icon: 'error',
                            confirmButtonColor: '#d33',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            }
        });
    </script>
}