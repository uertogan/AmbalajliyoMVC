@using AmbalajliyoMVC.ViewModels
@model IEnumerable<FaqViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-lg">
            <div class="card-header bg-secondary text-white text-center">
                <div class="card-title">Sıkça Sorulan Sorular Listesi</div>
            </div>
            <div class="card-body">
                <div class="accordion" id="faqAccordion">
                    @foreach (var item in Model.Select((faq, index) => new { faq, index }))
                    {
                        <div class="accordion-item mb-3 border border-secondary rounded">
                            <h2 class="accordion-header" id="heading-@item.index">
                                <button class="accordion-button collapsed bg-light text-secondary fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@item.index" aria-expanded="false" aria-controls="collapse-@item.index">
                                    @item.faq.Question
                                </button>
                            </h2>
                            <div id="collapse-@item.index" class="accordion-collapse collapse" aria-labelledby="heading-@item.index" data-bs-parent="#faqAccordion">
                                <div class="accordion-body bg-light text-muted">
                                    @item.faq.Answer
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!-- Ekstra CSS -->
<style>
    .accordion-button {
        transition: background-color 0.3s, color 0.3s;
    }

        .accordion-button:not(.collapsed) {
            background-color: #6c757d; /* Mat gri */
            color: white;
        }

        .accordion-button:focus {
            box-shadow: none;
        }

    .accordion-body {
        border-top: 2px solid #6c757d; /* Mat gri üst çizgi */
        padding: 15px;
    }

    .accordion-item {
        background-color: #f1f1f1; /* Çok hafif gri arka plan */
    }
</style>